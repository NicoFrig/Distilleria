<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <TextView
                        android:id="@+id/category1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Amari"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                     <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/category1">

                        <TextView
                            android:id="@+id/description1"
                            android:layout_width="wrap_content"
                            android:layout_height="112dp"
                            android:layout_weight="0.2"
                            android:layout_marginTop="16dp"
                            android:paddingLeft="32dp"
                            android:paddingRight="32dp"
                            android:justificationMode="inter_word"
                            android:text="Liquori alle erbe declinati in due versioni: classica per chi ama i gusti caldi e agrumati, balsamica per chi preferisce le sfumature fresche."
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="wrap_content"
                            android:layout_height="146dp"
                            android:layout_weight="0.8"
                            android:layout_marginRight="32dp"
                            android:src="@drawable/quaglia_vermouth_bianco_ombra" />

                    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>